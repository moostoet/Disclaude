# Discord Bot Configuration
# Copy this file to .env and fill in your values

# Required: Your Discord bot token (from Discord Developer Portal > Bot > Token)
DISCORD_BOT_TOKEN=

# Required: Your Discord application ID (from Discord Developer Portal > General Information)
DISCORD_APPLICATION_ID=

# Optional: Base path for project directories (default: ~/projects)
PROJECTS_BASE_PATH=~/projects

# Optional: Comma-separated list of Claude Code tools to auto-allow
# Example: Read,Write,Bash(git:*)
CLAUDE_ALLOWED_TOOLS=

# Optional: Enable debug logging (true/false)
DEBUG=false
